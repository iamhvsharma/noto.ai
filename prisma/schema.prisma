datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum Category {
    WORK
    PERSONAL
    RESEARCH
    MEETINGS
    IDEAS
}

model User {
    id    String @id @default(uuid())
    email String @unique
    notes Note[]

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Note {
    id        String   @id @default(uuid())
    title     String
    category  Category?
    text      String
    authorId  String
    author    User     @relation(fields: [authorId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}
